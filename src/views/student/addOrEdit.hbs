<h3>{{viewTitle}}</h3>
<form action="/student" method="POST">
  <input
    type="hidden"
    name="_id"
    value="{{student.id}}"
    class="visually-hidden"
  />
  <div class="mb-4">
    <label for="fullName" class="form-label">Full Name</label>
    <input
      type="text"
      id="fullName"
      name="fullName"
      placeholder="Full Name"
      value="{{student.fullName}}"
      class="form-control"
      autocomplete="off"
    />
  </div>
  <div class="mb-4">
    <label for="mobile" class="form-label">Email</label>
    <input
      type="email"
      id="email"
      name="email"
      placeholder="Email"
      value="{{student.email}}"
      class="form-control"
      autocomplete="off"
    />
  </div>
  <div class="row">
    <div class="mb-4 col">
      <label for="mobile" class="form-label">Mobile</label>
      <input
        type="text"
        id="mobile"
        name="mobile"
        placeholder="Mobile"
        value="{{student.mobile}}"
        class="form-control"
        autocomplete="off"
      />
    </div>
    <div class="mb-4 col">
      <label for="city" class="form-label">City</label>
      <input
        type="text"
        id="city"
        name="city"
        placeholder="City"
        value="{{student.city}}"
        class="form-control"
        autocomplete="off"
      />
    </div>
  </div>
  <div class="mb-4">
    <button type="submit" class="btn btn-info">Submit</button>
    <a href="/student/list" class="btn btn-secondary">View All</a>
  </div>
</form>
